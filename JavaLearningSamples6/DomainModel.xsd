          <xs:element name="nickname" type="xs:string" />
          <xs:element name="photourl" type="xs:string" />
          <xs:element name="books" type="bookentity" nillable="true" minOccurs="0" maxOccurs="unbounded" />
         </xs:sequence>
       </xs:extension>
